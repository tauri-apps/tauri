        "fs": {
          "default": {
            "all": false,
            "copyFile": false,
            "createDir": false,
            "path": false,
            "readBinaryFile": false,
            "readDir": false,
            "readTextFile": false,
            "removeDir": false,
            "removeFile": false,
            "renameFile": false,
            "writeBinaryFile": false,
            "writeFile": false
          },
          "allOf": [
