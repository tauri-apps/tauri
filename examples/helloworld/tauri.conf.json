{
  "$schema": "../../core/tauri-config-schema/schema.json",
  "productName": "Hello World",
  "version": "0.1.0",
  "identifier": "com.tauri.dev",
  "build": {
    "prodFrontend": {
      "files": [
        "index.html"
      ]
    }
  },
  "app": {
    "windows": [
      {
        "title": "Welcome to Tauri!",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src ipc: http://ipc.localhost"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "../.icons/32x32.png",
      "../.icons/128x128.png",
      "../.icons/128x128@2x.png",
      "../.icons/icon.icns",
      "../.icons/icon.ico"
    ]
  }
}